#
# wm independent hotkeys
#

XF86MonBrightness{Down,Up}
	$SCRIPT_DIR/bright { -,+ }

XF86Audio{Lower,Raise}Volume
	amixer set Master 5{-,+}

{_,shift + }XF86AudioMute
	{amixer set Master toggle, alacritty -e alsamixer }

XF86TouchpadToggle
	$SCRIPT_DIR/touchpad

# terminal emulator
super + Return
	alacritty

super + n
	alacritty -e nmtui

# program launcher
super + d
	dmenu_run

super + control + l
	bslock

super + b
	$SCRIPT_DIR/btheadphones

super + c
	clipmenu

super + shift + p
  	$SCRIPT_DIR/toggleprogram "picom" "--experimental-backends"

# make sxhkd reload its configuration files:
super + Escape
	$SCRIPT_DIR/killandnotify "sxhkd" "Config reloaded" && sxhkd &

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}
#
# state/flags
#

# set the window state
super + f
	bspc node focused.tiled -t fullscreen || bspc node focused.fullscreen -t tiled

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'
